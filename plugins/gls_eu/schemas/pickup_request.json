{
    "type": "object",
    "properties": {
        "location": {
            "type": "string",
            "description": "GLS location code"
        },
        "pickup": {
            "type": "object",
            "properties": {
                "date": {"type": "string", "format": "date"},
                "from": {"type": "string", "pattern": "^[0-9]{4}$"},
                "to": {"type": "string", "pattern": "^[0-9]{4}$"},
                "address": {
                    "type": "object",
                    "properties": {
                        "name1": {"type": "string"},
                        "name2": {"type": "string"},
                        "street1": {"type": "string"},
                        "country": {"type": "string"},
                        "zipcode": {"type": "string"},
                        "city": {"type": "string"},
                        "contact": {"type": "string"},
                        "phone": {"type": "string"},
                        "email": {"type": "string"}
                    }
                },
                "parcels": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "weight": {"type": "number"},
                            "references": {
                                "type": "array",
                                "items": {"type": "string"}
                            }
                        }
                    }
                }
            }
        }
    }
}